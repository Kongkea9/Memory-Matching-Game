<Window x:Class="MemoryMatchingGame.frmCover"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryMatchingGame"
        mc:Ignorable="d"
        Title="frmCover" Width="800" Height="1000"
        Background="LightBlue"
        WindowState="Maximized"
        WindowStyle="None">
    <!--<Border 
             Width="600"
             Height="770"
            Background="#FFFFFF"
            Margin="10"
             BorderBrush="Gray"
             BorderThickness="0.3">-->
        <Grid>
            <!-- Background -->
            <Grid.Background>
                <ImageBrush ImageSource="CoverImage/Cover.png" Stretch="Fill"/>
            </Grid.Background>

            <!-- Buttons -->
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Margin="0,420,0,0">
                <Button Content="Quick Game" 
                        Name ="btnQuickGame"
                        Width="200" Height="60" 
                        Background="#4EB1FA" 
                        FontSize="20" FontWeight="Bold"
                        Foreground="White"
                        Cursor="Hand"
                        Click="btnQuickGame_Click">

                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="18"
                                    BorderBrush="White" 
                                    BorderThickness="3">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        <ControlTemplate.Triggers>
                            <!-- Change Background on Hover -->
                            <Trigger Property="IsMouseOver" Value="True " >
                                <Setter TargetName="border" Property="Background" Value="#3A91C8"/>
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="2 Players" 
                        Name = "btnPlayers"
                        Width="200" Height="60" 
                        Background="#3BB54A" 
                        FontSize="20" FontWeight="Bold"
                        Foreground="White"                  
                        Cursor="Hand"
                        Margin="16"
                        Click="btnPlayers_Click">

                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="18"
                                    BorderBrush="White" 
                                    BorderThickness="3">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        <ControlTemplate.Triggers>
                            <!-- Change Background on Hover -->
                            <Trigger Property="IsMouseOver" Value="True " >
                                <Setter TargetName="border" Property="Background" Value="#319443"/>
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Quit" 
                        Name="btnQuit"
                        Width="200" Height="60" 
                        Background="#F7C503" 
                        FontSize="20" FontWeight="Bold"
                        Foreground="White"
                        Cursor="Hand"
                        Click="btnQuit_Click">

                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="18"
                                    BorderBrush="White" 
                                    BorderThickness="3">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        <ControlTemplate.Triggers>
                            <!-- Change Background on Hover -->
                            <Trigger Property="IsMouseOver" Value="True " >
                                <Setter TargetName="border" Property="Background" Value="#D6A802"/>
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

        </Grid>
    <!--</Border>-->
</Window>