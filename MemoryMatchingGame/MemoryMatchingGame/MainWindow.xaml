<Window x:Class="MemoryMatchingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryMatchingGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="800"
        WindowState="Maximized"
        WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource=".\CoverImage\Background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid Height="900"
          Width="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.12*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="0.11*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
                      Name ="PlayerScore"
                      Margin="8,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                </Grid>


              <TextBlock Grid.Column="1"
                         FontSize="20"
                         FontWeight="Bold"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Margin="0,0,0,5" >
                 <Image Source="/ButtonIcon\Time.png" 
                        Height="30" 
                        Width="30"/>
              </TextBlock>
              <TextBlock Grid.Column="2"
                         Name ="tbTime"
                         Text="00 : 00"
                         FontSize="20"
                         FontWeight="Bold"
                         VerticalAlignment="Center"/>
              <TextBlock Grid.Column="3"
                         FontSize="20"
                         FontWeight="Bold"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right">
                  <Image Source="/ButtonIcon\Move.png" 
                         Height="30" 
                         Width="30"/>
              </TextBlock>
              <TextBlock Grid.Column="4"
                         Name ="tbMove"
                         Text="0"
                         FontSize="20"
                         FontWeight="Bold"
                         VerticalAlignment="Center"
                         Margin="2,3,0,0"/>

            </Grid>
       
        
            <Border Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="#97BDEA"
                    BorderThickness="2"
                    CornerRadius="15"   
                    Height="700"
                    Width="590">
                <Grid Name="GameGrid">

                </Grid>

            </Border>


        

            <Grid Grid.Row="2"
                  Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>


                <Button Grid.Column="0"
                        Name="btnHome"
                        FontSize="20"
                        FontWeight="Bold"
                        Width="120"
                        Height="60"
                        Background="#4EB1FA"
                        BorderBrush="White"
                        BorderThickness="3"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Click="btnHome_Click">

                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Image Source=".\ButtonIcon\Home.png"
                           Height="40"
                           Width="40"/>

                    <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Change Background on Hover -->
                            <Trigger Property="IsMouseOver" Value="True " >
                                <Setter TargetName="border" Property="Background" Value="#3A91C8"/>
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Button.Template> 

            </Button>
            <Button Grid.Column="1"
                    Name="btnPaush"
                    FontSize="20"
                    FontWeight="Bold"
                    Width="100"
                    Height="60"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="#3BB54A"
                    BorderBrush="White"
                    BorderThickness="3"
                    Click="btnPaush_Click"
                    >

                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Image Source=".\ButtonIcon\Paush.png"
                           Name ="btnPaushIcon"
                           Height="30"
                           Width="30"/>
                     

                    <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Change Background on Hover -->
                            <Trigger Property="IsMouseOver" Value="True " >
                                <Setter TargetName="border" Property="Background" Value="#319443"/>
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Button.Template> 

            </Button>
            <Button Grid.Column="2"                  
                    Name="btnRestart"
                    FontSize="20"
                    FontWeight="Bold"
                    Width="110"
                    Height="60"
                    Background="#F7C503"
                    BorderBrush="white"                    
                    BorderThickness="3"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Click="btnRestart_Click">

                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Image Source=".\ButtonIcon\Restart.png"
                           Height="30"
                           Width="30"/>

                    <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Change Background on Hover -->
                            <Trigger Property="IsMouseOver" Value="True " >
                                <Setter TargetName="border" Property="Background" Value="#D6A802"/>
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Button.Template> 
            </Button>

                      
        </Grid>
       



    </Grid>
</Window>
