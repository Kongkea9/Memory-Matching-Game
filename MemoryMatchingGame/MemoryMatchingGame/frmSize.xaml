<Window x:Class="MemoryMatchingGame.frmSize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryMatchingGame"
        mc:Ignorable="d"
        Title="frmSize" Height="900" Width="800"
        WindowState="Maximized"
        WindowStyle="None">
    
    
    <Window.Background>
        <ImageBrush ImageSource=".\CoverImage\Background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Border Width="600"
            BorderThickness="0"
            Margin="100,10,100,26">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.4*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Memory matching games"
                       FontSize="45"
                       FontStyle="Italic"
                       FontWeight="Bold"
                       Foreground="#3A8BF2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="10,60,0,0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Gray" 
                                      BlurRadius="2" 
                                      ShadowDepth="3" 
                                      Opacity="0.5" />
                </TextBlock.Effect>

            </TextBlock>
                

            
            <Grid Margin="15" Grid.Row="1"
                  Height="450">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--Size 3x2-->
                <Button Name="btn3x2"
                        Margin="15"
                        Grid.Row="0"
                        Grid.Column="0"
                        Background="#EDE6FC"
                        BorderBrush="#FFFFFF"
                        BorderThickness="2"
                        Click="btn3x2_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Change Background on Hover -->
                                <Trigger Property="IsMouseOver" Value="True " >
                                    <Setter TargetName="border" Property="Background" Value="#27679B"/>
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel>
                        <TextBlock Text="3x2"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="#1295E6"/>
                    </StackPanel>
                </Button>


                <!--Size 4x3-->
                <Button Name="btn4x3" 
                        Margin="15"
                        Grid.Row="0"
                        Grid.Column="1"
                        Background="#EDE6FC"
                        BorderBrush="#FFFFFF"
                        BorderThickness="3"
                        Click="btn4x3_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Change Background on Hover -->
                                <Trigger Property="IsMouseOver" Value="True " >
                                    <Setter TargetName="border" Property="Background" Value="#27679B"/>
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel>
                        <TextBlock Text="4x3"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="#1295E6"/>
                    </StackPanel>
                </Button>


                <Button Name="btn4x4" 
                        Margin="15"
                        Grid.Row="0"
                        Grid.Column="2"
                        Background="#EDE6FC"
                        BorderBrush="#FFFFFF"
                        BorderThickness="3"
                        Click="btn4x4_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                   CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Change Background on Hover -->
                                <Trigger Property="IsMouseOver" Value="True " >
                                    <Setter TargetName="border" Property="Background" Value="#27679B"/>
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel>
                        <TextBlock Text="4x4"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="#1295E6"/>
                    </StackPanel>
                </Button>


                <!--Size 5x4-->
                <Button Name="btn5x4" 
                        Margin="15"
                        Grid.Row="1"
                        Background="#EDE6FC"
                        BorderBrush="#FFFFFF"
                        BorderThickness="3"                        
                        Grid.Column="0"
                        Click="btn5x4_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Change Background on Hover -->
                                <Trigger Property="IsMouseOver" Value="True " >
                                    <Setter TargetName="border" Property="Background" Value="#27679B"/>
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel >
                        <TextBlock Text="5x4"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="#1295E6"/>
                    </StackPanel>
                </Button>

                <!--Size 6x5-->
                <Button Grid.Row="1"
                        Grid.Column="1"
                        Name="btn6x5" 
                        Margin="15"
                        Background="#EDE6FC"
                        BorderBrush="#FFFFFF"
                        BorderThickness="3"
                        Click="btn6x5_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Change Background on Hover -->
                                <Trigger Property="IsMouseOver" Value="True " >
                                    <Setter TargetName="border" Property="Background" Value="#27679B"/>
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel >
                        <TextBlock Text="6x5"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="#1295E6"/>
                    </StackPanel>
                </Button>
                <!--Size 8x5-->
                <Button Grid.Row="1"
                        Grid.Column="2"
                        Name="btn8x5" 
                        Margin="15"
                        Background="#EDE6FC"
                        BorderBrush="#FFFFFF"
                        BorderThickness="3"
                        Click="btn8x5_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Change Background on Hover -->
                                <Trigger Property="IsMouseOver" Value="True " >
                                    <Setter TargetName="border" Property="Background" Value="#27679B"/>
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel>
                        <TextBlock Text="8x5"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="#1295E6"/>
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Grid.Row="2"
                  Margin="5,0,20,60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Name="btnBack"
                        FontSize="20"
                        FontWeight="Bold"
                        Width="120"
                        Height="60"
                        Background="#F2B9C3"
                        BorderBrush="White"
                        BorderThickness="3"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Click ="btnBack_Click">

                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Image Source=".\ButtonIcon\Back.png"
                           Height="40"
                           Width="40"/>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="18">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Change Background on Hover -->
                                <Trigger Property="IsMouseOver" Value="True " >
                                    <Setter TargetName="border" Property="Background" Value="#D99AA7"/>
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Grid.Column="2"
                        Name="btnHome"
                        FontSize="20"
                        FontWeight="Bold"
                        Width="120"
                        Height="60"
                        Background="#4EB1FA"
                        BorderBrush="White"
                        BorderThickness="3"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Click="btnHome_Click">

                    <Button.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Opacity="0.5" />
                    </Button.Effect>

                    <Image Source=".\ButtonIcon\Home.png"
                           Height="40"
                           Width="40"/>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="18">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Change Background on Hover -->
                                <Trigger Property="IsMouseOver" Value="True " >
                                    <Setter TargetName="border" Property="Background" Value="#3A91C8"/>
                                    <Setter Property="Cursor" Value="Hand" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </Grid>

        </Grid>


    </Border>
</Window>
